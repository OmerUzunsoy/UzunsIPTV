<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:id="@+id/topInfoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/player_gradient_background"
        android:rotation="180"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvChannelNamePlayer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="..."
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_universal_selector"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="HD"
                android:textColor="#03DAC5"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSystemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnPrevChannel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_universal_selector"
            android:src="@android:drawable/ic_media_previous"
            app:tint="#FFFFFF"
            android:padding="12dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnRewind"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_universal_selector"
            android:text="-10s"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_universal_selector"
            android:src="@android:drawable/ic_media_pause"
            app:tint="#FFFFFF"
            android:scaleType="fitCenter"
            android:padding="20dp"/>

        <Button
            android:id="@+id/btnForward"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_universal_selector"
            android:text="+10s"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginStart="24dp"
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <ImageButton
            android:id="@+id/btnNextChannel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_universal_selector"
            android:src="@android:drawable/ic_media_next"
            app:tint="#FFFFFF"
            android:padding="12dp"
            android:layout_marginStart="24dp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/player_gradient_background"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:played_color="#03DAC5"
            app:unplayed_color="#40FFFFFF"
            app:buffered_color="#80FFFFFF"
            app:scrubber_color="#03DAC5"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvLiveBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • CANLI "
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@drawable/bg_live_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvDivider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#AAAAAA"
                android:layout_marginHorizontal="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:visibility="gone"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/btnFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/btn_star_big_off"
                app:tint="#FFFFFF"
                android:background="@drawable/bg_universal_selector"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp"
                android:tooltipText="Favorilere Ekle"/>

            <ImageView
                android:id="@+id/btnSpeed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#FFFFFF"
                android:background="@drawable/bg_universal_selector"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:id="@+id/btnAudio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                app:tint="#FFFFFF"
                android:background="@drawable/bg_universal_selector"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:id="@+id/btnSubtitle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_subtitle"
                app:tint="#FFFFFF"
                android:background="@drawable/bg_universal_selector"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:id="@+id/btnAspectRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_universal_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">
                <TextView
                    android:id="@+id/tvAspectRatio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIĞDIR"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
