<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#2003DAC5" /> <stroke android:width="4dp" android:color="#03DAC5" /> <corners android:radius="16dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4003DAC5" />
            <stroke android:width="4dp" android:color="#03DAC5" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <stroke android:width="0dp" android:color="#00000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>